<resources>

    <!-- Base application theme. -->
<!--    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="android:textColorPrimary">?themeTextColor</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="android:windowBackground">?themeBackground</item>
        <item name="android:itemBackground">#f0f0f0</item>
<!--        stops contextual actionbar from pushing down the toolbar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <!--default theme-->
    <style name="AppTheme.White">
        <item name="themePrimary">@color/whitePrimary</item>
        <item name="themePrimaryDark">@color/whitePrimaryDark</item>
        <item name="themeAccent">@color/whiteAccent</item>
        <item name="themeBackground">@color/white_background_holo_light</item>
        <item name="themeTextColor">@color/whiteText</item>
        <item name="themeTextColorSecondary">@color/whiteTextSecondary</item>
        <item name="themeTextColorDull">@color/whiteDull</item>

    </style>

<!--    <style name="CustomTitle" parent="TextAppearance.AppCompat.Title">-->
    <style name="CustomTitle">
<!--        <item name="android:textAllCaps">true</item>-->
<!--        <item name="android:fontFamily">serif</item>-->
        <item name="android:textSize">@dimen/fnt_size_ttl</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">@dimen/fnt_size</item>
    </style>

    <style name="RegularText.Dull">
        <item name="android:textColor">?themeTextColorDull</item>
    </style>

    <style name="LargeText">
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">@dimen/fnt_size_lg</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">@dimen/fnt_size_sm</item>
    </style>

    <style name="SmallText.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?themeTextColor</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?themeTextColorSecondary</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="android:background">?themePrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <dimen name="fnt_size_ttl">16sp</dimen>
</resources>
