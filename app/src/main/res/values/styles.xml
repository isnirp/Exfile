<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="android:textColorPrimary">?themeTextColor</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="android:windowBackground">?themeBackground</item>
        <item name="android:itemBackground">#f0f0f0</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <!--default theme-->
    <!--white theme-->
    <style name="AppTheme.White">
        <item name="themePrimary">@color/whitePrimary</item>
        <item name="themePrimaryDark">@color/whitePrimaryDark</item>
        <item name="themeAccent">@color/whiteAccent</item>
        <item name="themeBackground">@color/white_background_holo_light</item>
        <item name="themeTextColor">@color/whiteText</item>
        <item name="themeTextColorSecondary">@color/whiteTextSecondary</item>
        <item name="themeTextColorDull">@color/whiteDull</item>

    </style>

    <style name="RegularText">
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">@dimen/fnt_size</item>
    </style>

    <style name="RegularText.Dull">
        <item name="android:textColor">?themeTextColorDull</item>
    </style>

    <style name="LargeText">
        <item name="android:textColor">?themeTextColor</item>
        <item name="android:textSize">@dimen/fnt_size_lg</item>
    </style>

    <dimen name="fnt_size">13sp</dimen>
    <dimen name="fnt_size_lg">16sp</dimen>
</resources>
